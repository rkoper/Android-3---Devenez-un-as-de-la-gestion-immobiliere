    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/round_yellow</item>
        <item name="android:backgroundStacked">#F9AA32</item>
        <item name="android:colorBackground">#F9AA34</item>
