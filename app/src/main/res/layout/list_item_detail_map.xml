<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorD">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_margin="1dp"
        android:background="@color/colorB"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/distance"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/nameof"
            android:maxLines="3"
            style="@style/TxtViewPrincipal"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Square Robert Patulacci "/>

        <TextView
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/nameof"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/distance"
            style="@style/TxtViewPrincipal"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="distance : "/>
        <TextView
            android:id="@+id/test"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/nameof"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            style="@style/TxtViewPrincipal"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text=" "/>

        <LinearLayout
            android:id="@+id/linearColor"
            android:background="@color/colorD"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/nameof"
            app:layout_constraintBottom_toTopOf="@+id/distance"
            app:layout_constraintLeft_toLeftOf="@+id/test"
            app:layout_constraintRight_toRightOf="@+id/test"
            android:orientation="horizontal" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>



