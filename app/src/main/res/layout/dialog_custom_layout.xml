<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorB"
    tools:context=".controller.activity.CreateActivity"
    android:orientation="vertical">
    <EditText
        style="@style/MyEditTextStyle2"
        android:id="@+id/custom_dialog_txt"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Photo info"
        android:textColorHint="@color/colorDbis"
        android:textCursorDrawable = "@null"
        android:background="@color/colorTransparent"
        android:textSize="16sp"
        android:gravity="center"
        android:inputType="textNoSuggestions"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        />
    <ImageButton
        android:id="@+id/custom_dialog_ok"
        android:layout_gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/check_yellow"
        android:text="Dismiss"
        />
</LinearLayout>