<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorB"
    tools:context=".controller.activity.CreateActivity"
    android:orientation="vertical">
    <EditText
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/custom_dialog_ok"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/MyEditTextStyle2"
        android:imeOptions="actionDone"
        android:id="@+id/custom_dialog_txt"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Photo info"
        android:textColorHint="@color/colorD"
        android:textCursorDrawable = "@null"
        android:background="@color/colorTransparent"
        android:textSize="16sp"
        android:gravity="center"
        android:inputType="textNoSuggestions"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        />
    <ImageButton
        app:layout_constraintTop_toBottomOf="@+id/custom_dialog_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="visible"
        android:id="@+id/custom_dialog_not_ok"
        android:layout_gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/check_light"
        android:text="Dismiss"
        />

    <ImageButton
        app:layout_constraintTop_toBottomOf="@+id/custom_dialog_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/custom_dialog_ok"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/check_yellow"
        android:text="Dismiss"
        android:visibility="invisible" />
</androidx.constraintlayout.widget.ConstraintLayout>

