<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="32dp"
    android:paddingTop="64dp"
    android:paddingEnd="32dp"
    android:paddingBottom="64dp">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/list_item_background"
        android:layout_width="96dp"
        android:layout_height="128dp"
        android:layout_centerInParent="true"
        android:src="@drawable/square_yellow" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideITem1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65"/>

    <ImageView
        android:layout_margin="7dp"
        app:layout_constraintTop_toTopOf="@+id/list_item_background"
        app:layout_constraintBottom_toTopOf="@+id/guideITem1"
        app:layout_constraintLeft_toLeftOf="@+id/list_item_background"
        app:layout_constraintRight_toRightOf="@+id/list_item_background"
        android:id="@+id/list_item_icon"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/guideITem1"
        app:layout_constraintBottom_toBottomOf="@+id/list_item_background"
        app:layout_constraintLeft_toLeftOf="@+id/list_item_background"
        app:layout_constraintRight_toRightOf="@+id/list_item_background"
        android:text="1234 "
        android:gravity="center_horizontal"
        android:id="@+id/list_item_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/list_item_background"
        android:layout_centerHorizontal="true"
        style="@style/MyEditTextStyleSearch"
        android:textColor="@color/colorB"
        android:textSize="@dimen/textadaptsizesmall" />

</androidx.constraintlayout.widget.ConstraintLayout >