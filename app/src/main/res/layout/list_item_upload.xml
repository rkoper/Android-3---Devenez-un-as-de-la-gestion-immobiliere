<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        card_view:layout_constraintGuide_percent="0.63" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        card_view:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        card_view:layout_constraintGuide_percent="0.28" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        card_view:layout_constraintGuide_percent="0.42" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:layout_constraintGuide_percent="0.97" />

    <ImageView
        android:layout_margin="3dp"
        android:id="@+id/activity_upload_item_imageview"
        android:layout_width="match_parent"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="match_parent"
        tools:srcCompat="@tools:sample/avatars" />
    <TextView
        android:id="@+id/upload_item_txt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorB"
        android:paddingStart="20dp"
        android:gravity="center_vertical"
        android:text="Test"
        android:textColor="@color/colorD"
        android:textSize="14dp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="1"
        card_view:layout_constraintRight_toRightOf="@+id/guideline4"
        card_view:layout_constraintTop_toBottomOf="@+id/guideline"
        card_view:layout_constraintBottom_toBottomOf="@id/guideline2"
        card_view:layout_constraintLeft_toLeftOf="@+id/guideline3" />

    <ImageView
        android:id="@+id/edit_upload"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorB"
        card_view:layout_constraintLeft_toLeftOf="@+id/guideline5"
        card_view:layout_constraintRight_toRightOf="@+id/guideline8"
        card_view:layout_constraintTop_toTopOf="@+id/guideline"
        card_view:layout_constraintBottom_toBottomOf="@+id/guideline2"
        android:layout_marginBottom="1dp"
        android:scaleType="centerCrop"
        android:tint="@color/colorD"
        tools:targetApi="lollipop" />
    <ImageView
        android:id="@+id/edit_uploadV2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/edit_grey"
        card_view:layout_constraintLeft_toLeftOf="@+id/guideline5"
        card_view:layout_constraintRight_toRightOf="@+id/guideline8"
        card_view:layout_constraintTop_toBottomOf="@+id/guideline"
        card_view:layout_constraintBottom_toBottomOf="@id/guideline2"
        android:layout_marginBottom="1dp"
        android:scaleType="centerCrop"
        android:tint="@color/colorD"
        tools:targetApi="lollipop" />

    <ImageView
        android:id="@+id/delete_upload"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorB"
        card_view:layout_constraintTop_toTopOf="@+id/guideline6"
        card_view:layout_constraintBottom_toBottomOf="@+id/guideline7"
        card_view:layout_constraintLeft_toLeftOf="@+id/guideline5"
        card_view:layout_constraintRight_toRightOf="@+id/guideline8"
        android:layout_marginBottom="1dp"
        android:scaleType="centerCrop"
        android:tint="@color/colorD"
        tools:targetApi="lollipop" />

    <ImageView
        android:id="@+id/delete_uploadV2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/cancel_grey"
        card_view:layout_constraintTop_toTopOf="@+id/guideline6"
        card_view:layout_constraintBottom_toBottomOf="@+id/guideline7"
        card_view:layout_constraintLeft_toLeftOf="@+id/guideline5"
        card_view:layout_constraintRight_toRightOf="@+id/guideline8"
        android:layout_marginBottom="1dp"
        android:scaleType="centerCrop"
        android:tint="@color/colorD"
        tools:targetApi="lollipop" />








</androidx.constraintlayout.widget.ConstraintLayout>
